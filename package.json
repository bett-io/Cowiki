{
  "name": "cowiki.io",
  "version": "1.0.0",
  "description": "Helloworld on lambda for a web",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "start": "webpack-dev-server --config webpack.client.config.js --inline --content-base ./devserver/ --history-api-fallback",
    "start:standalone": "npm run build:standalone && node ./standalone/standalone.bundle.js",
    "build:client": "webpack --env production -p --config webpack.client.config.js",
    "build:server": "webpack -p --config webpack.server.config.js",
    "build": "npm run build:client && npm run build:server",
    "build:standalone": "webpack --config webpack.standalone.config.js",
    "dist": "cp package.json ./dist/ && cd ./dist && npm install --production",
    "lint": "eslint . --cache",
    "flow": "flow",
    "deploy": "node-lambda deploy -p --description `git rev-parse HEAD` --prebuiltDirectory dist",
    "belazy": "npm run flow && npm run lint && npm run build && npm run dist && npm run deploy"
  },
  "author": "",
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/testSetup.js"
  },
  "dependencies": {
    "aws-sdk": "^2.49.0",
    "aws-serverless-express": "^3.0.2",
    "axios": "^0.17.1",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "diff": "^3.4.0",
    "express": "^4.14.1",
    "express-jwt": "^5.3.0",
    "jsonwebtoken": "^8.1.1",
    "lokijs": "^1.5.1",
    "marked": "^0.3.12",
    "prop-types": "^15.5.9",
    "react": "^16.2.0",
    "react-bootstrap": "^0.32.1",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0-beta.16",
    "react-redux": "^5.0.4",
    "react-router-bootstrap": "^0.24.2",
    "react-router-dom": "^4.1.2",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.1",
    "redux-thunk": "^2.2.0",
    "shortid": "^2.2.8",
    "time-ago": "^0.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.22.0",
    "core-js": "^2.5.0",
    "css-loader": "^0.28.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.62.0",
    "if-env": "^1.0.0",
    "jest": "^22.0.4",
    "node-lambda": "^0.11.5",
    "react-test-renderer": "^16.2.0",
    "style-loader": "^0.19.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.2",
    "webpack-hot-middleware": "^2.21.2",
    "webpack-merge": "^4.1.2"
  }
}
